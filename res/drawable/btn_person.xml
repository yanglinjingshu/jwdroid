<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">        
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#d0d0d0"
                android:angle="90" />
            <stroke
                android:width="1px"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="2dp"
                android:right="8dp"
                android:bottom="2dp" />                
        </shape>
    </item>    
    
    <item>        
        <shape>
            <gradient
                android:endColor="#ffffff"
                android:startColor="#d0d0d0"
                android:angle="90" />
            <stroke
                android:width="1px"
                android:color="#aaaaaa" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="2dp"
                android:right="8dp"
                android:bottom="2dp" />
                
        </shape>
    </item>
    
</selector>
