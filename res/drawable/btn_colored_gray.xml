<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">        
        <shape>
            <gradient
                android:startColor="@color/gray_light"
                android:endColor="@color/gray"
                android:angle="90" />
            <stroke
                android:width="1px"
                android:color="@color/gray" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="1dp"
                android:top="6dp"
                android:right="1dp"
                android:bottom="6dp" />                
        </shape>
    </item>   
    
    <item android:state_enabled="false">        
        <shape>
            <gradient
                android:startColor="@color/btn_disabled"
                android:endColor="@color/btn_disabled"
                android:angle="90" />
            <corners
                android:radius="8dp" />              
        </shape>
    </item>    
    
    <item>        
        <shape>
            <gradient
                android:endColor="@color/gray_light"
                android:startColor="@color/gray"
                android:angle="90" />
            <stroke
                android:width="1px"
                android:color="@color/gray" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="1dp"
                android:top="6dp"
                android:right="1dp"
                android:bottom="6dp" />
                
        </shape>
    </item>
    
</selector>
