<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.jwdroid"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
	android:paddingTop="10dip"
	android:paddingBottom="10dip"
	android:gravity="center_vertical"
	android:background="#eeeeee">
	
    <ImageView android:id="@+id/backup_item_heading_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"    
        android:src="@drawable/drive_small" />
	
	<TextView android:id="@+id/backup_item_heading_label"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginLeft="10dp"	  	  
	  android:textSize="16dip" 
	  android:textColor="#888888"
	  android:text="Google Drive"/>
    	
    	
</LinearLayout>
