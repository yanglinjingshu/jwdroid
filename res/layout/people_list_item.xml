<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.jwdroid"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal">
		
		<View android:id="@+id/people_item_color1"
			android:layout_width="8dip"
			android:layout_height="fill_parent"
			android:background="#999999"/>	
		<View android:id="@+id/people_item_color2"
			android:layout_width="4dip"
			android:layout_height="fill_parent"
			android:layout_marginRight="7dip"
			android:background="#ffffff"/>	
		
			
			
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"	
			android:layout_weight="1"		
			android:paddingTop="8dip"
			android:paddingBottom="8dip"
			android:paddingRight="8dip">
			
	
			<TextView android:id="@+id/people_item_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="16dip"
			    android:textStyle="bold"/>
			    
			<ImageView android:id="@+id/people_item_visit_type_icon"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:tint="#bbffffff"/>
			
			<TextView 
			    android:id="@+id/people_item_desc"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"	
			    android:layout_below="@id/people_item_name"
			    android:layout_alignParentLeft="true"
			    android:layout_marginTop="2dip"
			   	android:maxLines="5"		   	
			    android:textSize="13dip"
			    android:textColor="#000000"
			    android:fadingEdge="vertical"/>
			    
			 <TextView android:id="@+id/people_item_door_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_below="@id/people_item_desc"
			    android:layout_marginTop="2dip"
			    android:textSize="12dip"
			    android:textColor="#999999"/>	
		</RelativeLayout>
		
			
		
			
	</LinearLayout>
	    
	
</LinearLayout>